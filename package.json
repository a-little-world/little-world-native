{
  "name": "little-world-app",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start --port 9000",
    "start:expo-go": "EXPO_PUBLIC_USE_EXPO_GO=true expo start --port 9000 --clear --go",
    "start:dev-build": "EXPO_PUBLIC_USE_EXPO_GO=false expo start --port 9000",
    "reset-project": "node ./scripts/reset-project.js",
    "troubleshoot": "./scripts/dev-troubleshoot.sh",
    "android": "expo start --android --port 9000",
    "dev:proxy": "./_scripts/schrodingers-nginx.sh",
    "android:expo-go": "EXPO_PUBLIC_USE_EXPO_GO=true expo start --android --port 9000 --clear --go",
    "android:dev-build": "EXPO_PUBLIC_USE_EXPO_GO=false expo start --android --port 9000",
    "ios": "expo start --ios --port 9000",
    "ios:expo-go": "EXPO_PUBLIC_USE_EXPO_GO=true expo start --ios --port 9000 --clear --go",
    "ios:dev-build": "EXPO_PUBLIC_USE_EXPO_GO=false expo start --ios --port 9000",
    "web": "expo start --web --port 9000",
    "lint": "expo lint",
    "prebuild": "expo prebuild --clean"
  },
  "dependencies": {
    "@a-little-world/little-world-design-system": "2.5.1",
    "@a-little-world/little-world-design-system-core": "^1.3.3",
    "@a-little-world/little-world-design-system-native": "^0.2.1",
    "@a-little-world/little-world-frontend-shared": "^0.1.0",
    "@babel/runtime": "^7.27.6",
    "@expo/metro-runtime": "~5.0.0",
    "@expo/vector-icons": "~14.0.4",
    "@livekit/react-native-webrtc": "^125.0.10",
    "@react-navigation/bottom-tabs": "^7.2.0",
    "@react-navigation/native": "^7.0.14",
    "@rn-primitives/portal": "^1.3.0",
    "expo": "~53.0.0",
    "expo-blur": "~14.0.2",
    "expo-constants": "~18.0.0",
    "expo-dev-client": "~6.0.0",
    "expo-font": "~13.0.3",
    "expo-haptics": "~15.0.0",
    "expo-linear-gradient": "~14.1.0",
    "expo-linking": "~8.0.0",
    "expo-router": "^5.1.4",
    "expo-secure-store": "~15.0.0",
    "expo-splash-screen": "~0.30.0",
    "expo-status-bar": "~2.0.1",
    "expo-symbols": "~0.3.0",
    "expo-system-ui": "~5.0.0",
    "expo-web-browser": "~15.0.0",
    "http-proxy-middleware": "^3.0.5",
    "i18next": "^25.3.1",
    "js-cookie": "^3.0.5",
    "littleplanet": "file:./littleplanet-0.1.199.tgz",
    "livekit-client": "^2.13.8",
    "react": "19.0.0",
    "react-hook-form": "^7.54.2",
    "react-i18next": "^15.4.0",
    "react-native": "0.79.5",
    "react-native-exception-handler": "^2.10.10",
    "react-native-gesture-handler": "~2.20.2",
    "react-native-reanimated": "~3.16.1",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.4.0",
    "react-native-svg": "15.8.0",
    "react-native-webview": "13.12.5",
    "styled-components": "^6.1.19",
    "swr": "^2.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-transform-runtime": "^7.28.0",
    "@types/react": "~19.0.0",
    "@types/react-test-renderer": "^19.0.0",
    "eas-cli": "^16.17.4",
    "metro-minify-terser": "^0.83.1",
    "react-native-svg-transformer": "^1.5.1",
    "react-test-renderer": "19.0.0",
    "typescript": "^5.3.3"
  },
  "private": true,
  "packageManager": "pnpm",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "19.x",
        "react-dom": "19.x"
      }
    }
  },
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "exclude": [
          "@livekit/react-native",
          "@livekit/react-native-webrtc",
          "react-native-exception-handler"
        ],
        "listUnknownPackages": false
      }
    }
  }
}
