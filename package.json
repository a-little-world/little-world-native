    "@rn-primitives/portal": "^1.3.0",
    "expo": "~54.0.24",
    "expo-asset": "^12.0.10",
    "expo-blur": "~15.0.7",
    "expo-build-properties": "~0.14.8",
    "expo-constants": "~18.0.10",
    "expo-crypto": "^15.0.7",
    "expo-dev-client": "~6.0.18",
    "expo-device": "~8.0.10",
    "expo-font": "~14.0.9",
    "expo-haptics": "~15.0.7",
    "expo-linear-gradient": "~15.0.7",
